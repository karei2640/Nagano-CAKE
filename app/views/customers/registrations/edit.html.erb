<div class="container mt-5 mb-5">
  <div class="col-8 mx-auto">
    <h2>会員情報編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      
      
      <table>
          <tr>
            <td><%= f.label "氏名" %></td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "フリガナ" %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "郵便番号" %></td>
            <td><%= f.text_field :postcode, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "住所" %></td>
            <td><%= f.text_field :address, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "電話番号" %></td>
            <td><%= f.text_field :tel, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
        <%= f.submit "編集内容を保存", class:"btn btn-success my-4 col-10" %>
            </td>
            <td>
    <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger my-4 col-8"  %>
            </td>
          </tr>
      </table>
      <div class="actions">
      </div>
    <% end %>
  </div>
</div>