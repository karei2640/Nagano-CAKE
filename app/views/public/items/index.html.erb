<div class="container mt-5 mb-5">
  <h2 class="mb-5">商品一覧(全<%= @items_all.count %>件)</h2>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left ">
    <% @items.each do |item|%>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
      <%= link_to item_path(item) do%>
         <p class="img-wrap"><%= attachment_image_tag item, :image, format: "jpeg", fallback: "no_image.jpeg" %></p>
      <% end %>
      <div>
        <p class="item-details"><%= item.name %></p>
        <p class="item-details">¥<%= item.price_excluding_tax %></p>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @items, class:"text-center" %>
</div>
