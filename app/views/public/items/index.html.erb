<div class="container mt-5 mb-5">
  <h2 class="mb-5">商品一覧(全<%= @items_all.count %>件)</h2>
  <div class="row mt-3 mb-3">
    <% @items.each do |item|%>
    <div class="col-md-3 mx-auto text-center">
      <%= link_to item_path(item) do%>
         <p class="img-wrap"><%= attachment_image_tag item, :image, size: "255x180", format: "jpeg", fallback: "no_image.jpeg" %></p>
      <% end %>
      <div>
        <p class="text-left item-details"><%= item.name %></p>
        <p class="text-left item-details">¥<%= item.price_excluding_tax %></p>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @items, class:"text-center" %>
</div>
