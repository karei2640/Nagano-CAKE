<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-5 text-right ml-auto">
     <%= attachment_image_tag @item, :image, size: "280x200", format: "jpeg", fallback: "no_image.jpeg", class:"lb" %>
    </div>
    <div class="col-md-4 item-details mr-auto">
      <h2><strong><%= @item.name %></strong></h2>
      <h4><%= @item.description %></h4>
      <h3>¥ <%= change_price_excluding_tax( @item.price_excluding_tax) %> (税込)</h3>
      <p><%= render "item_amount_form", cart_item: @cart_item, item: @item %></p>
      </div> 
  </div>
</div>