<h2>配送先登録/一覧</h2>

<!--配送先登録フォーム-->
<%= form_with model: @shipping_address, local: true do |f| %>
<table>
<tbody>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :shipping_postcode, placeholder:"0000000" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :shipping_address, placeholder:"住所を入力してください"%></td>
  </tr>
  <tr>
    <td>宛名</td></td>
    <td><%= f.text_field :shipping_name, placeholder:"名前を入力してください"%></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</tbody>
</table>
<% end %>


<!--配送先一覧表-->
<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛先</th></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @shipping_addresses.each do |shipping_address| %>
    <tr>
      <td><%= shipping_address.shipping_postcode %></td>
      <td><%= shipping_address.shipping_address %></td>
      <td><%= shipping_address.shipping_name %></td>
      <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class:"btn btn-success" %></td>
      <td><%= link_to "削除する", class:"btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


