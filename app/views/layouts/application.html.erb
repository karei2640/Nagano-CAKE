<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= image_tag "S__11862023.jpg", :size => "50x50" %>
      <% if admin_signed_in? %>
      <!--adminログイン時のヘッダー-->
      <ul>
       <li><%= link_to "商品一覧", admin_items_path %></li>
       <li><%= link_to "会員一覧", admin_customers_path %></li>
       <li><%= link_to "注文履歴一覧", admin_order_path  %></li>
       <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
       <li><%= link_to "ログアウト", "#" %></li>
       </ul>
       <form>
        <input type="search"  placeholder="キーワードを入力">
        <input type="submit" value="検索">
       </form>
      <% elsif customer_signed_in? %> 
      <!--ccustomersログイン時のヘッダー-->
      <ul>
       <li><%= link_to "マイページ", customers_path %></li>
       <li><%= link_to "商品一覧", items_path %></li>
       <li><%= link_to "カート", cart_items_path %></li>
       <li><%= link_to "ログアウト",  destroy_customer_session_path, method: :delete %></li>
      </ul>
      <% else %>
      <!--ログイン前時のヘッダー-->
      <ul>
       <li><%= link_to "About", about_path %></li>
       <li><%= link_to "商品一覧", items_path %></li>
       <li><%= link_to "新規登録", new_customer_registration_path %></li>
       <li><%= link_to "ログイン", new_customer_session_path %></li>
      </ul>
      <% end %>
    </header>
    <%= yield %>
    <footer>
      ヘッダー
    </footer>
  </body>
</html>
