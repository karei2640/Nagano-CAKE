<div class="genre-index">

  <p>ジャンル一覧・追加</p>

  <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録" %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>