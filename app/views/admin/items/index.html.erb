<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品一覧</h2>
      <table class="table text-center">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
          <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item_path(item.id) do %>
              <%= item.name %>
            </td>
            <% end %>
            <td><%= item.price_excluding_tax %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.sales_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  