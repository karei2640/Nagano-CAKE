<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品一覧</h2>
      <div class="text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
      </div>
      <table class="table text-center">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
          <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            </td>
            <% end %>
            <td><%= item.price_excluding_tax %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.sales_status == true %>
               <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-danger font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
        <%= paginate @items %>
      </table>
    </div>
  </div>
</div>
  