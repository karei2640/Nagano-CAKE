<div class="container mt-5 mb-5">
  <div class="col-8 mx-auto">
    <h1>会員一覧</h1>
    <table class="table border-dark border-bottom-3">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><u><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"font-weight-bold" %></u></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.withdrawal_status == false %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-secondary">退会</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    
    <%= paginate @customers %>
        
  </div>
</div>